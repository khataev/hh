.employee-errors
  .ul
    - @employee.errors.full_messages.each do |message|
      .li=message

= form_for @employee do |f|
  .form-group
    = f.label :name, 'ФИО:'
    = f.text_field :name, placeholder: 'Фамилия Имя Отчество на кириллице', class: 'form-control'
    = f.label :contacts, 'Контактные данные:'
    = f.text_area :contacts, placeholder: 'Ваши контактные данные, телефон, e-mail итп', class: 'form-control', cols: 90, rows: 10
    = f.label :salary, 'Хочу запрплату'
    = f.number_field :salary, in: 0..9999999, class: 'form-control'
    = f.label :search_status, 'Ищу работу'
    = f.check_box :search_status
    %br
    = render 'abilities/abilities', object: @employee, action: 'edit'
    = f.submit 'Редактировать умения', type: 'button', class: 'btn btn-primary', data: {toggle: 'modal', target: '#abilitiesModal'}
    = f.submit 'Сохранить', class: 'pull-right btn btn-default'
    = link_to 'Назад к списку', employees_path, class: 'pull-right btn btn-primary'

= render 'abilities/edit_abilities_modal', object: @employee