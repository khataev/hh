.row
  .col-md-8
    = render 'employees/form'

    -##abilitiesModal.modal.fade
      .modal-dialog{role: 'document'}
        .modal-content
          .modal-header
            %h2.modal-title Укажите список умений:
          .modal-body
            = render 'abilities/abilities', object: @employee
          .modal-footer
            = button_tag 'Отменить', type: 'button', class: 'btn btn-default', data: {dismiss: 'modal'}
            = button_tag 'Сохранить', type: 'button', class: 'btn btn-primary'

