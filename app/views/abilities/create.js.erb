<% if @ability.errors.present? %>
$('.new-ability-errors').html('');
  <% @ability.errors.full_messages.each do |message| %>
    $('.new-ability-errors').append('<%= j message %>' + '</br>');
  <% end %>

<% else %>
  $('#abilitiesModal .abilities-list').append('<%= j render @ability, action: 'view' %>');
  $('.form-abilities-list .abilities-list').append('<%= j render @ability, action: 'edit', object_name: @object.class.to_s.downcase, object: @object %>');
  $('#new-ability-name').val('');
<% end %>
